# Database Configuration
# Supported database types: mysql, postgresql (or postgres, pg), sqlserver (or mssql, sql-server)
# Default: mysql

# Database type
DB_TYPE=mysql

# Host address (default: localhost)
DB_HOST=localhost

# Database port (optional - defaults based on DB_TYPE)
# MySQL: 3306, PostgreSQL: 5432, SQL Server: 1433
DB_PORT=3306

# Database user (optional - defaults based on DB_TYPE)
# MySQL: root, PostgreSQL: postgres, SQL Server: sa
DB_USER=root

# Database password (default: password)
DB_PASSWORD=password

# Database name (default: btpntest)
DB_NAME=btpntest

# SSL Mode for PostgreSQL and SQL Server (default: disable)
# Options: disable, require, verify-ca, verify-full
DB_SSLMODE=disable

# Application port (default: 8080)
APP_PORT=8080


